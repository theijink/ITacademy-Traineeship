    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Behave",
            "type": "python",
            "request": "launch",
            "module": "behave",
            "args": [
                "-D BEHAVE_DEBUG_ON_ERROR=no",
                "--tags=wip",
                "--no-skipped"
            ]
        }
    ]
}